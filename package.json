{
  "name": "react-simple-redux",
  "version": "0.1.0",
  "description": "A minimal implementation of Redux using React Context API",
  "keywords": [
    "react",
    "redux",
    "context api"
  ],
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --runInBand --reporters=jest-junit",
    "build:dev": "webpack --config webpack.dev.js && npm run sass-build",
    "build:prod": "webpack --config webpack.prod.js && npm run sass-build",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook && node .storybook/deploy-helper.js",
    "deploy-storybook": "storybook-to-ghpages -e storybook-static",
    "publish:dev": "npm publish --tag beta",
    "publish:prod": "npm publish",
    "add-version-suffix": "node ./node_modules/npm-version-suffix/run-add-suffix.js",
    "remove-version-suffix": "node ./node_modules/npm-version-suffix/run-remove-suffix.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iannbing/react-simple-redux.git"
  },
  "author": "Huang-Ming Chang <huang.m.chang@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iannbing/react-simple-redux/issues"
  },
  "homepage": "https://github.com/iannbing/react-simple-redux#readme",
