    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@storybook/storybook-deployer": "^2.8.1",
    "@storybook/theming": "^5.1.9",
    "@types/classnames": "^2.2.8",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.132",
    "@types/react": "^16.7.18",
